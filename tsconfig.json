{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": false
  },
  "include": [
    "src/index.ts",
    "src/**/*.json"
  ]
}

